@model AuthSystem.Models.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        @* Purchase history *@
        <form asp-controller="Home" asp-action="Index" method="get">
            <label>Symbol:</label>
            <input asp-for="@Model.StockData.Data.Symbol" name="symbol" />
            <button type="submit">Submit</button>
        </form>


        <div class="scrollable-table mt-3">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Time</th>
                        <th>Symbol</th>
                        <th>Action</th>
                        <th>Quantity</th>
                        <th>Cost</th>
                    </tr>
                </thead>
                @if (Model != null)
                {
                    <tr>
                        <td>Time</td>
                        <td>@Model.StockData.Data.Symbol</td>
                        <td>x</td>
                        <td> x</td>
                        <td>@Model.StockData.Data.CurrentPrice</td>
                    </tr>
                }
                <tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6">
        <div>
            <div class="box" style="width: 100%; height: 50px;"></div>
            <div class="box mt-2" style="width: 100%; height: 50px;"></div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="box"></div>
    </div>
</div>
